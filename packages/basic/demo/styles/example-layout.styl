@import '../../src/styles/_variables.styl';

.demoWrap {
  font-family: 'Nunito Sans', sans-serif;
  text-align: left;
  background: #F9FAFB;
  padding: 14px;
  width: 100%;
  display: flex;
  flex-wrap: wrap;

  .boxWrap {
    background: #fff;
    width: calc(100% / 3 - 20px);
    // min-width: 340px;
    padding: 10px;
    margin: 10px;
    border-radius: 6px;
    box-shadow: 0 10px 70px rgba(0, 0, 0, 0.05);

    h3 {
      background: $pale-grey-two;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      font-size: 16px;
      color: $bluey-grey;
      text-align: center;
      line-height: 40px;
    }

    p {
      font-size: 16px;
      color: $dark;
    }

    .box {
      min-height: 200px;
      display: flex;
      justify-content: center;
      align-items: center;

      .stage {
        text-align: center;

        .item {
          margin-bottom: 20px;
        }

        a {
          color: $bluey-grey;
          text-decoration: none;

          &:hover {
            text-decoration: underline;
          }

          &.hyberlink {
            color: $secondary-01;
          }
        }
      }
    }
  }
}

@media screen and (max-width: 900px) {
  .demoWrap {
    .boxWrap {
      width: calc(100% / 2 - 20px);
    }
  }
}

@media screen and (max-width: 600px) {
  .demoWrap {
    .boxWrap {
      width: calc(100% - 20px);
    }
  }
}